<!-- Edit Post -->
<div>
    <div class="flex flex-col items-center min-h-screen pt-6 bg-gray-100 sm:justify-center sm:pt-0">
        <div class="w-full px-16 py-20 mt-6 overflow-hidden bg-white rounded-lg lg:max-w-4xl">
            <div class="mb-4">
                <h1 class="font-serif text-3xl font-bold underline capitalize decoration-gray-400">
                    <%= resOperation.title %> Post
                </h1>
            </div>

            <div class="w-full px-6 py-4 bg-white rounded shadow-md ring-1 ring-gray-900/10">
                <!-- Add New Post Form -->
                <% if (resOperation.data == null) { %>
                    <form method="POST" action="<%= resOperation.nextUrlOperation %>">
                        <!-- Title -->                     
                            <div>
                                <label class="block text-sm font-bold text-gray-700" for="title">
                                    Title
                                </label>
                                <input
                                    class="block w-full mt-1 border p-2 py-3 outline-none rounded-md shadow-sm placeholder:text-gray-400 placeholder:text-right focus:!border-blue-400"
                                    type="text" name="title" placeholder="180" value="" />
                            </div>
    
                            <!-- Description -->
                            <div class="mt-4">
                                <label class="block text-sm font-bold text-gray-700" for="password">
                                    Description
                                </label>
                                <textarea name="body"
                                    class="block w-full mt-1 px-2 py-3 border border-gray-300 rounded-md outline-none shadow-sm placeholder:text-gray-400 placeholder:text-right focus:border-blue-300"
                                    rows="4" placeholder="400"></textarea>
                            </div>
                           
                                <div class="flex items-center justify-start mt-4 gap-x-2">
                                    <button type="submit"
                                        class="px-6 py-2 text-sm font-semibold capitalize rounded-md shadow-md text-sky-100 bg-sky-500 hover:bg-sky-700 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300">
                                        <%= resOperation.title %>
                                    </button>
                                    <a href="/"
                                        class="px-6 py-2 text-sm font-semibold text-gray-100 bg-gray-400 rounded-md shadow-md hover:bg-gray-600 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300">
                                        Cancel
                                    </a>
                                </div>
                    </form>
                 
                <% } else { %>
                    <!-- Edit Post Form -->
                    <form method="POST" action="<%=  resOperation.nextUrlOperation %>">
                        <% for( let post of resOperation.data){%>       
                            <!-- Title -->                     
                                <div>
                                    <label class="block text-sm font-bold text-gray-700" for="title">
                                        Title
                                    </label>
                                    <input
                                        class="block w-full mt-1 border p-2 py-3 outline-none rounded-md shadow-sm placeholder:text-gray-400 placeholder:text-right focus:!border-blue-400"
                                        type="text" name="title" placeholder="180" value="<%= post.title %>" />
                                </div>
        
                                <!-- Description -->
                                <div class="mt-4">
                                    <label class="block text-sm font-bold text-gray-700" for="password">
                                        Description
                                    </label>
                                    <textarea name="body"
                                        class="block w-full mt-1 px-2 py-3 border border-gray-300 rounded-md outline-none shadow-sm placeholder:text-gray-400 placeholder:text-right focus:border-blue-300"
                                        rows="4" placeholder="400"><%= post.body %></textarea>
                                </div>
                               
                                    <div class="flex items-center justify-start mt-4 gap-x-2">
                                        <button type="submit"
                                            class="px-6 py-2 text-sm font-semibold capitalize rounded-md shadow-md text-sky-100 bg-sky-500 hover:bg-sky-700 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300">
                                            <%= resOperation.title %>
                                        </button>
                                        <a href="/"
                                            class="px-6 py-2 text-sm font-semibold text-gray-100 bg-gray-400 rounded-md shadow-md hover:bg-gray-600 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300">
                                            Cancel
                                        </a>
                                    </div>
                        </form>
                <% }} %>
            </div>
        </div>
    </div>
</div>